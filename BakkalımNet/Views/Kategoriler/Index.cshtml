@using BakkalımNet.Models.Entity

@model List<BakkalımNet.Models.Entity.kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Ana Sayfası</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Kategori ID</td>
            <td>Kategori Adı</td>
            <td>Sil</td>
            <td>Güncelle</td>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>@item.kategori_id</td>
            <td>@item.k_adi</td>
            <td><a href="/Kategoriler/SilBilgiGetir/@item.kategori_id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategoriler/GuncelleBilgiGetir/@item.kategori_id" class="btn btn-primary">Güncelle</a></td>
        </tr>
        }
          
        </tbody>

</table>
<a href="/Kategoriler/Ekle/"  class="btn btn-success" style="margin-top:10px;">Kategori Ekle</a>